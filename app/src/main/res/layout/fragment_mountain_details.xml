<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.brohede.marcus.fragmentsapp.MountainDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mountain_img"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:elevation="1dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/mountain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackText"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/mountain_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackText"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/mountain_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackText"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/mountain_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:textColor="@color/colorBlackText"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/mountain_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorBlackText"
                    android:textSize="10sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
